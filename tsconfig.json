{
  "ts-node": {
    "transpileOnly": true,
    "require": [
      "typescript-transform-paths/register"
    ],
  },
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./src/",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  }
}